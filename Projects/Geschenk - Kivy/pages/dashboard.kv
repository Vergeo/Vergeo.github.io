<CircleButton@Button>
	id : login_button
	size_hint : 1.5/9, 1.5/16
	pos_hint : {"center_x" : .5, "center_y" : .27}
	background_color : 0,0,0,0
	font_size : "16sp"
	font_name : "Barlow"
	bold : True
	color : 1,1,1,1
	canvas.before :
		Color : 
			rgb : 1,1,1,1
		RoundedRectangle :
			size : self.size
			pos : self.pos
			radius : [1000]

Screen :
	name : "dashboard"

	MDFloatLayout :
		id : layout0
		md_bg_color : rgba(124, 49, 43)
		MDToolbar :
			title : ""
			md_bg_color : rgba(124, 49, 43)
			left_action_items : [["menu", lambda x : nav_drawer.set_state("toggle")]]
			top : root.top

	MDFloatLayout :
		md_bg_color : rgba(124, 49, 43)
		size_hint : (1, .3)
		pos_hint : {"center_x" : .5, "center_y" : .75}

		Image :
			id : dashboard_img
			source : "assets/img/dashboard_subtitle.png"
			pos_hint : {"center_x" : .5, "center_y" : .85}
			size_hint : (.9, .9)

		Image :
			source : "assets/img/login_title.png"
			pos_hint : {"center_x" : .5, "center_y" : .85}

	MDFloatLayout :
		# md_bg_color : rgba(0, 0, 0, 255)
		size_hint : (1, 1)
		pos_hint : {"center_x" : .5, "center_y" : .5} 
		MDLabel :
			id : welcome_label
			text : ""
			halign : "center"
			pos_hint : {"center_x" : .5, "center_y" : .6}
			font_name : "Barlow"
			color : (1, 1, 1, 1)
			font_size : "20sp"

		MDLabel :
			text : "Click the navigation bar or"
			halign : "center"
			pos_hint : {"center_x" : .5, "center_y" : .5}
			font_name : "Barlow"
			color : (1, 1, 1, 1)
			font_size : "20sp"

		MDLabel :
			text : "One of the buttons below to get"
			halign : "center"
			pos_hint : {"center_x" : .5, "center_y" : .46}
			font_name : "Barlow"
			color : (1, 1, 1, 1)
			font_size : "20sp"

		MDLabel :
			text : "started!"
			halign : "center"
			pos_hint : {"center_x" : .5, "center_y" : .42}
			font_name : "Barlow"
			color : (1, 1, 1, 1)
			font_size : "20sp"

		# CircleButton :
		# 	pos_hint : {"center_x" : .2, "center_y" : .27}
		# 	on_press : app.change_page("make_a_purchase")
		# CircleButton :
		# 	pos_hint : {"center_x" : .5, "center_y" : .27}
		# CircleButton :
		# 	pos_hint : {"center_x" : .8, "center_y" : .27}

		MDRoundFlatIconButton :
			icon : "calculator"
			text : "M.A.P."
			pos_hint : {"center_x" : .2, "center_y" : .27}
			on_press : app.change_page("make_a_purchase")
			theme_text_color : "Custom"
			line_color : 1,1,1,1
			icon_color : 1,1,1,1
			text_color : 1,1,1,1

		MDRoundFlatIconButton :
			icon : "account"
			text : "Profile"
			pos_hint : {"center_x" : .5, "center_y" : .27}
			on_press : app.change_page("profile")
			theme_text_color : "Custom"
			line_color : 1,1,1,1
			icon_color : 1,1,1,1
			text_color : 1,1,1,1

		MDRoundFlatIconButton :
			icon : "logout-variant"
			text : "Exit"
			pos_hint : {"center_x" : .8, "center_y" : .27}
			on_press : app.exit()
			theme_text_color : "Custom"
			line_color : 1,1,1,1
			icon_color : 1,1,1,1
			text_color : 1,1,1,1


	MDNavigationDrawer :
		id : nav_drawer

		MDFloatLayout :

			Image :
				source : "assets/img/logo.png"
				size_hint : .7, .7
				pos_hint : {"center_x" : .45, "center_y" : .87}

			MDRectangleFlatIconButton :
				icon : "braille"
				text : "Dashboard"
				theme_text_color : "Custom"
				line_color : 1, 1, 1, 1
				icon_color : rgba(124, 49, 43)
				text_color : rgba(124, 49, 43)
				pos_hint : {"center_x" : .27, "center_y" : .75}
				on_press : app.change_page("dashboard")

			MDRectangleFlatIconButton :
				icon : "calculator"
				text : "Make a Purchase"
				theme_text_color : "Custom"
				line_color : 1, 1, 1, 1
				icon_color : rgba(124, 49, 43)
				text_color : rgba(124, 49, 43)
				pos_hint : {"center_x" : .33, "center_y" : .69}
				on_press : app.reset_purchases()
				on_press : app.change_page("make_a_purchase")

			MDRectangleFlatIconButton :
				icon : "account"
				text : "Profile"
				theme_text_color : "Custom"
				line_color : 1, 1, 1, 0
				icon_color : rgba(124, 49, 43)
				text_color : rgba(124, 49, 43)
				pos_hint : {"center_x" : .22, "center_y" : .63}
				on_press : app.change_page("profile")

			MDRectangleFlatIconButton :
				icon : "account-convert"
				text : "Logout"
				theme_text_color : "Custom"
				line_color : 1, 1, 1, 1
				icon_color : rgba(124, 49, 43)
				text_color : rgba(124, 49, 43)
				pos_hint : {"center_x" : .235, "center_y" : .57}
				on_press : app.sign_out()

			MDRectangleFlatIconButton :
				icon : "logout-variant"
				text : "Exit"
				theme_text_color : "Custom"
				line_color : 1, 1, 1, 1
				icon_color : rgba(124, 49, 43)
				text_color : rgba(124, 49, 43)
				pos_hint : {"center_x" : .215, "center_y" : .51}
				on_press : app.exit()